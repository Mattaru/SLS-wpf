<Window x:Class="SLS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLS"
        xmlns:vm="clr-namespace:SLS.MVVM.ViewModel"
        Height="650" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="#CFCFCF">

    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="#252525">

            <Grid VerticalAlignment="Stretch">

                <Label Foreground="#CFCFCF"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Left"
                       Content="{Binding Title}"
                       FontSize="12"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,20,0">
                    
                    <Button Content="_"
                            Height="20"
                            Width="20"
                            Margin="0,0,0,2"
                            Background="Transparent"
                            Foreground="Gray"
                            BorderThickness="0"
                            FontWeight="ExtraBold"
                            Command="{Binding MinimizeAppCommand}"/>

                    <Button Content="▢"
                            Height="20"
                            Width="20"
                            Background="Transparent"
                            Foreground="Gray"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Command="{Binding MaximazeAppCommand}"/>

                    <Button Content="✕"
                            Height="20"
                            Width="20"
                            Background="Transparent"
                            Foreground="Gray"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Command="{Binding CloseApplicationCommand}"/>  
                    
                </StackPanel>
                
            </Grid>
            
        </Border>

        <DataGrid Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding ResourceCollection}"
                  AutoGenerateColumns="False"
                  Visibility="Collapsed">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="*"/>

                <DataGridTextColumn Header="Login"
                                    Binding="{Binding Login}"
                                    Width="*"/>

                <DataGridTextColumn Header="Password"
                                    Binding="{Binding Password}"
                                    Width="*"/>

                <DataGridTextColumn Header="Creation date"
                                    Binding="{Binding CreationDate, StringFormat='hh:mm - dd.mm.yy'}"
                                    Width="100"/>

                <DataGridTextColumn Header="Last modification"
                                    Binding="{Binding LastModificationDate, StringFormat='hh:mm - dd.mm.yy'}"
                                    Width="100"/>
            </DataGrid.Columns>
            
        </DataGrid>

        <ContentControl Grid.Row="1" Grid.Column="0"
                        Content="{Binding CurrentView}"/>

        <Border Grid.Row="1" Grid.Column="1"
                Background="#252525">
            
        </Border>

    </Grid>
    
</Window>
